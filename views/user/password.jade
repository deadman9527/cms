extend ../layout
block pageCfg
	- header.menu = 'page';
	- header.ngApp = 'cms';
	
block container
	style.
		.btn{
			margin-right:30px;
		}
		.radio label{
			margin-right:10px;
		}
		.errorMsg{
			padding-left: 15px;
			margin-bottom: 15px;
		}
	div.container
		.pages-list
			.row
				.col-md-12
					.wrapper
						h2 修改密码

						form.form-horizontal(role="form", name="pswForm", action="#", method="post", ng-controller="pswModify")
							.form-group
								label.col-md-2.control-label 原密码
								.col-md-4
									input.form-control(type="password", name="password", ng-model="infoData.password", required)
								.col-md-4
									p.form-control-static.text-danger(ng-show="pswForm.password.$error.required")
										span.glyphicon.glyphicon-remove-circle
										|  原密码不能为空
							.form-group
								label.col-md-2.control-label 新密码
								.col-md-4
									input.form-control(type="password", name="newpassword", ng-model="infoData.newpassword", required, ng-minlength="6")			
								.col-md-4
									p.form-control-static.text-danger(ng-show="pswForm.newpassword.$error.required || pswForm.newpassword.$error.minlength")
										span.glyphicon.glyphicon-remove-circle
										|  新密码不能为空且不能少于六位	
							.form-group
								label.col-md-2.control-label 确认密码
								.col-md-4
									input.form-control(type="password", name="repassword", ng-model="infoData.repassword", required)
								.col-md-4
									p.form-control-static.text-danger(ng-show="pswForm.repassword.$error.required")
										span.glyphicon.glyphicon-remove-circle
										|  确认密码不能为空
							.form-group
								.col-md-10.col-md-offset-2
									button.btn.btn-primary.btn-lg(type="button", ng-click="doSubmit()") 修改密码

	script(src="/assets/pswoprate.js")
